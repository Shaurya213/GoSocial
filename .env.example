# =============================================================================
# GoSocial Application Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values

# MongoDB Configuration (GridFS Media Storage)
MONGO_HOST=172.20.0.10
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=your_mongo_password
MONGO_DATABASE=gosocial

# MySQL Configuration (Primary Database)
# Production server configuration
# MYSQL_HOST=your_production_mysql_host
# MYSQL_PORT=3310
# MYSQL_USERNAME=gosocial_user
# MYSQL_PASSWORD=your_mysql_password
# MYSQL_DATABASE=gosocial_db

# Local MySQL Configuration (Development)
MYSQL_HOST=localhost
MYSQL_PORT=3310
MYSQL_USERNAME=gosocial_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=gosocial_db

# JWT Configuration
# Generate a strong random secret key for production
JWT_SECRET=your_jwt_secret_key_here

# Microservice Ports
CHAT_SERVICE_PORT=7003
USER_SERVICE_PORT=7001
FEED_SERVICE_PORT=7002
NOTIF_SERVICE_PORT=7004

# Media HTTP Server Configuration
# Configuration for serving uploaded media files
MEDIA_SERVER_PORT=8080
MEDIA_BASE_URL=http://localhost:8080/media

# Logging Configuration
# Available LOG_LEVELS: debug, info, warn, error
# Available LOG_FORMATS: json, text
# Available LOG_OUTPUTS: stdout, stderr, file
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=stdout
